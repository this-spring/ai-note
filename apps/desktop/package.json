{
  "name": "@ai-note/desktop",
  "version": "0.1.0",
  "description": "AI-Note desktop app - local-first Markdown note-taking with built-in version control",
  "main": "./out/main/index.js",
  "scripts": {
    "dev": "unset ELECTRON_RUN_AS_NODE && electron-vite dev",
    "build": "electron-vite build",
    "preview": "unset ELECTRON_RUN_AS_NODE && electron-vite preview",
    "rebuild": "electron-rebuild",
    "postinstall": "electron-rebuild",
    "lint": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write .",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@abandonware/bleno": "^0.6.2",
    "@ai-note/shared-types": "workspace:*",
    "@codemirror/lang-markdown": "^6.3.1",
    "@codemirror/state": "^6.5.2",
    "@codemirror/theme-one-dark": "^6.1.2",
    "@fastify/cors": "^11.2.0",
    "@fastify/websocket": "^11.2.0",
    "better-sqlite3": "^11.8.1",
    "bonjour-service": "^1.3.0",
    "chokidar": "^4.0.3",
    "codemirror": "^6.0.1",
    "diff": "^7.0.0",
    "fastify": "^5.7.4",
    "flexsearch": "^0.7.43",
    "gray-matter": "^4.0.3",
    "isomorphic-git": "^1.27.2",
    "qrcode": "^1.5.4",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-markdown": "^10.1.0",
    "rehype-raw": "^7.0.0",
    "remark-gfm": "^4.0.1",
    "zustand": "^5.0.3"
  },
  "devDependencies": {
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@electron/rebuild": "^4.0.2",
    "@types/better-sqlite3": "^7.6.13",
    "@types/diff": "^6.0.0",
    "@types/qrcode": "^1.5.6",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@types/ws": "^8.18.1",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "electron": "^33.3.1",
    "electron-builder": "^25.1.8",
    "electron-vite": "^2.3.0",
    "eslint": "^9.18.0",
    "nan": "^2.25.0",
    "postcss": "^8.5.1",
    "prettier": "^3.4.2",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.7.3",
    "vite": "^5.4.11",
    "vitest": "^3.0.4"
  },
  "build": {
    "appId": "com.ainote.app",
    "productName": "AI-Note",
    "directories": {
      "output": "dist"
    },
    "files": [
      "out/**/*",
      "resources/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility"
    }
  }
}
